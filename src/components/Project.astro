---
import Icon from "./Icon.astro";
import Items from "./Items.astro";
import Techs from "./Techs.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col">
  <div class="flex flex-wrap items-baseline gap-x-4">
    <span class="font-bold text-lg font-ding">{project.title}</span>
    {project.subtitle && <span class="font-ding">{project.subtitle}</span>}
    {
      project.desc && (
        <span class="text-sm font-light text-gray-500">{project.desc}</span>
      )
    }
    <span class="grow"></span>
    {
      project.date && (
        <span class="text-sm font-light text-gray-500">{project.date}</span>
      )
    }
  </div>
  {
    (project.caption || project.techs) && (
      <div class="flex flex-wrap items-baseline gap-x-4">
        {(project.icon || project.caption) && (
          <div class="flex gap-0.5 items-baseline">
            {project.icon && (
              <div>
                <Icon name={project.icon} size="1.2rem" />
              </div>
            )}
            {project.caption && <div>{project.caption}</div>}
          </div>
        )}
        {project.techs && <Techs techs={project.techs} />}
      </div>
    )
  }
  {
    project.items && (
      <div>
        <Items items={project.items} />
      </div>
    )
  }
</div>
