---
import Metas from "./Metas.astro";

interface Props {
  header: Header;
}

const { header } = Astro.props;
---

<div class="flex flex-col items-center sm:flex-row justify-between gap-4">
  <h1 class="text-5xl font-ding font-black">
    {header.name}
  </h1>
  <div class="font-ding">
    <Metas metas={header.metas} />
  </div>
</div>
